{{#each books as |book|}}
  {{log book}}
  <section data-id="{{book.id}}">
    <h6>Title:</h6>
    <h3>
      {{limit book.title 15}}
    </h2>
    <h6>Author:</h6>
    <p>
      {{#if book.author}}
        {{book.author}}
      {{else}}
        No author provided.
      {{/if}}
    </p>
    <button data-id="{{book.id}}" class="btn btn-danger delete-book">Delete Book!</button>
  </section>
  <!-- test comment -->
{{/each}}
